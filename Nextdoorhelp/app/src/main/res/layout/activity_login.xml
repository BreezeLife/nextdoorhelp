<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/splash_color"
    tools:context="com.weiqilab.hackathon.nextdoorhelp.activities.LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="205dp"
        android:layout_height="273dp"
        android:src="@drawable/nextdoor"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textColor="@color/colorWhite"
        android:text="NextDoorHelp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/login_logo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
